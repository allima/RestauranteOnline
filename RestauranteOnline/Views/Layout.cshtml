<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Restaurante Online - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <style>
        body {
            padding-top: 60px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Restaurante Online</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li id="menuHome">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="menuHome">@Html.ActionLink("Restaurantes", "Index", "Restaurante")</li>
                    <li id="menuHome">@Html.ActionLink("Gêneros", "Index", "Genero")</li>
                    <li id="menuHome">@Html.ActionLink("Bairros", "Index", "Bairro")</li>
                    <li id="menuHome">@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <script src="@Url.Content("~/Scripts/jquery-2.2.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
